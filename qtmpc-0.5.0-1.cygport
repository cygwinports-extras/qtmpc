inherit qt4-qmake

DESCRIPTION="Qt4 Music Player Daemon client"
HOMEPAGE="http://qtmpc.lowblog.nl/"
SRC_URI="http://files.lowblog.nl/qtmpc/QtMPC-0.5.0.tar.bz2"
SRC_DIR="QtMPC"

src_install() {
	dobin ${B}/QtMPC.exe
	newicon ${S}/images/icon.svg qtmpc.svg
	make_desktop_entry QtMPC QtMPC qtmpc "AudioVideo;Audio;Player;Qt"
}
